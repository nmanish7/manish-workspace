# .alias file for tcsh shell or csh shell

### Setting tcsh
if ($?tcsh) then
    # Already in tcsh
else if ($?csh) then
    # In csh, switch to tcsh
    exec tcsh
else
    # Not in csh or tcsh, can't switch
    echo "Not in csh or tcsh, can't switch to tcsh"
    exit 1
endif

### Setting Vim Binding Modes for tcsh
alias novim "bindkey -e"
alias yesvim "bindkey -v"

